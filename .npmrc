# pnpm configuration
# This file configures pnpm package manager behavior

# Use hard links instead of copies when possible (faster)
symlink=false

# Ensure all dependencies are resolved from the same source
shamefully-hoist=true

# Lock file version (3 is latest and most secure)
lockfile-version=v5.4

# Engine check
engine-strict=true

# Prefer offline mode if packages are cached
prefer-offline=false

# Save dependencies precisely
save-exact=false

# Don't install optional dependencies by default
# optional=false

# Enable strict peer dependency resolution
strict-peer-dependencies=false
